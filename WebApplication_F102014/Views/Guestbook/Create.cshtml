@using WebApplication_F102014.Controllers

@model WebApplication_F102014.Models.GuestbookEntry

@{
    ViewBag.Title = "Create";
}

<h1>Create a guestbook entry</h1>
<h2>Your username will be used by default</h2>
<hr />

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        
        <div class="form-group">
            <label>
                <i class="fa fa-star" aria-hidden="true"></i>
                Username
            </label>

            <div class="col-md-10">
                <text>@UsersController.currentUser.Username</text>
            </div>
        </div>

        <div class="form-group">
            <label>
                <i class="fa fa-star" aria-hidden="true"></i>
                Message
            </label>
            <textarea name="Message" rows="10" cols="50"></textarea>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input class="button" type="submit" value="Create"/>
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
